<!-- the fx:controller is really important, learned that the hard way -->

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0"
            prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sample.engrisk.DictionaryController"
            stylesheets="main.css">
   <children>
      <Button fx:id="crudButton" layoutX="250.0" layoutY="14.0" mnemonicParsing="false" onAction="#launchCRUDOperations" text="CRUD operations" />
      <Button fx:id="gameButton" layoutX="625.0" layoutY="14.0" mnemonicParsing="false" onAction="#launchHangmanGame" text="die by rope" />
      <TextField fx:id="searchField" layoutX="14.0" layoutY="14.0" prefHeight="25.0" prefWidth="228.0" />
      <ListView fx:id="wordList" layoutX="14.0" layoutY="55.0" prefHeight="531.0" prefWidth="228.0" />
      <WebView fx:id="definitionView" layoutX="249.0" layoutY="88.0" prefHeight="498.0" prefWidth="539.0" />
      <Button fx:id="speakButton" layoutX="250.0" layoutY="55.0" mnemonicParsing="false" onAction="#handleSpeakButton" prefHeight="25.0" prefWidth="50.0" text="speak" />
      <Button fx:id="translationButton" layoutX="439.0" layoutY="14.0" mnemonicParsing="false" onAction="#launchTranslation" text="translate something" />
      <RadioButton fx:id="boleroButton" layoutX="710.0" layoutY="18.0" mnemonicParsing="false" onAction="#handleBoleroAction" text="nhac vang" />
      <Button fx:id="switchLanguageButton" layoutX="656.0" layoutY="55.0" mnemonicParsing="false" onAction="#changeLanguage" text="Switch to V" />
      <Button fx:id="infoButton" layoutX="740.0" layoutY="55.0" mnemonicParsing="false" onAction="#launchInfo" text="info" />
      <Button fx:id="sicBoButton" layoutX="600.0" layoutY="55.0" mnemonicParsing="false" onAction="#launchSicBoGame" text="casino" />
   </children>
</AnchorPane>
