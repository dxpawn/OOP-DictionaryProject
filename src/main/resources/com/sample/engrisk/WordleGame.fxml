    <Label style="-fx-font-size: 24px;" text="Wordle Game" />
   <Label fx:id="displayedWord" text="-" />
    <Label fx:id="finalMessage" text="" />
    <Label fx:id="feedbackLabel" text="You have 6 guesses left." />
    <TextField fx:id="guessInput" maxWidth="200" promptText="Enter your guess here" />
    <Button onAction="#handleGuess" text="Guess" />
</VBox>
