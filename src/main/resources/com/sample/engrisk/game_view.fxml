<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sample.engrisk.GameController">
    <Label fx:id="wordLabel" style="-fx-font-size: 24; -fx-font-family: monospace;" />
    <ImageView fx:id="hangmanImage" fitHeight="200" fitWidth="564.0" preserveRatio="true" />
    <HBox alignment="CENTER" spacing="10">
       <Button fx:id="restartButton" onAction="#restartGame" text="Restart">
         <font>
            <Font size="14.0" />
         </font></Button>
        <TextField fx:id="guessField" alignment="CENTER" prefHeight="25.0" prefWidth="198.0" promptText="Enter a letter">
         <font>
            <Font size="14.0" />
         </font></TextField>
        <Button onAction="#handleGuess" prefHeight="30.0" prefWidth="56.0" text="Guess">
         <font>
            <Font size="14.0" />
         </font></Button>
    </HBox>
    <Label fx:id="charCountLabel" text="Characters: ">
      <font>
         <Font size="13.0" />
      </font></Label>
    <Label fx:id="guessedLettersLabel" alignment="CENTER" prefHeight="17.0" prefWidth="337.0" text="Guessed Letters: " textAlignment="CENTER" textFill="#d01010">
      <font>
         <Font size="13.0" />
      </font></Label>
    <Label fx:id="messageLabel" style="-fx-font-size: 16;">
      <font>
         <Font size="13.0" />
      </font></Label>
</VBox>
